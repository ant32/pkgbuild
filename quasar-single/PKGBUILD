# Maintainer: ant32 <antreimer@gmail.com>

pkgname=quasar-single
pkgver=2.2.1
pkgrel=1
pkgdesc="Business accounting software (Server, Client, Sample Company, Help, Tools)"
url="http://www.linuxcanada.com"
arch=('x86_64' 'i686')
license=('Commercial')
depends=('icu48' 'tcl85' 'qt3' 'xinetd' 'postgresql')
optdepends=('polymer: KDE QT style Plastik')
provides=('quasar-server' 'quasar-client' 'quasar-sample-company' 'quasar-help-en-ca' 'quasar-tools')
conflicts=('quasar-server' 'quasar-client' 'quasar-sample-company' 'quasar-help-en-ca' 'quasar-tools')
[ ${arch} == 'i686' ] && _arch='i386' || _arch='amd64'
source=("ftp://linuxcanada.com/pub/Quasar/${pkgver}/binaries/${_arch}/Kubuntu/12.04/${pkgname}_${pkgver}-1_${_arch}.deb"
        'Quasar.desktop'
        'QuasarAdmin.desktop')
sha256sums=('c3b139a303702ff90ebbb4c973de8f02fd3efb5f30aca198444faa49e0968209'
            '9c4a47b7948b7a59f90f3276bed820cc895fa0e092f64057522a8f32d670c43a'
            '6140fb7546ec574d2542d2b398cfc149cf297dba4f547f055e7e1b6cec8f2918')
install="$pkgname.install"

package() {
  cd "${srcdir}"
  tar zxf data.tar.gz
  cp -al opt "$pkgdir"
  install -Dm644 Quasar.desktop "${pkgdir}/usr/share/applications/Quasar.desktop"
  install -Dm644 QuasarAdmin.desktop "${pkgdir}/usr/share/applications/QuasarAdmin.desktop"
  install -Dm644 usr/share/doc/$pkgname/copyright "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
