# Maintainer: ant32 <antreimer@gmail.com>
pkgname=qbs
pkgver=1.1.1
pkgrel=1
pkgdesc="Qt Build Suite"
arch=('i686' 'x86_64')
url="http://qt-project.org/wiki/qbs"
license='LGPL'
depends=('qt5-quick1')
source=("http://download.qt-project.org/official_releases/$pkgname/$pkgver/$pkgname-$pkgver.src.tar.gz")
sha256sums=('469e6c9c9fbe6475dd7f26c43e24fe08ce6715effa69680cbc2c7c06c2e1fe4e')

build() {
  cd "$srcdir/qbs-$pkgver.src"
  qmake -r qbs.pro
  make
}

package() {
  cd "$srcdir/qbs-$pkgver.src"
  make INSTALL_ROOT="$pkgdir/usr" install
}
